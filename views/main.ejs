<%- include('partials/header') -%>

  <!-- Splash -->

  <div class="container-fluid splash text-center">

    <h1 class="intro">
      <%=mainSource.intro.main%>
    </h1>
    <h2 class="intro">
      <%=mainSource.intro.sub%>
    </h2>
    <button class="btn btn-outline-light btn-sm intro show-button" type="button" name="button"
      onclick="window.location='#about';">
      <%=mainSource.intro.btn%>
    </button>

  </div>

  <!-- About -->

  <div class="container-fluid quick-about" id="about">

    <h1 class="intro">
      <%=mainSource.about.title%>
    </h1>

    <div class="row">

      <div class="col-md-12 col-lg-4 text-center skill-col">

        <i class="fas fa-user about-icon"></i>

        <h2 class="about-col">
          <%=mainSource.about.item1.title%>
        </h2>

        <p>
          <%=mainSource.about.item1.text%>
        </p>

        <a class="btn btn-sm btn-outline-dark about-btn" type="button" name="button" href="cv">
          <%=mainSource.about.item1.btn%>
        </a>

      </div>

      <div class="col-md-12 col-lg-4 text-center skill-col">

        <i class="fas fa-atom about-icon"></i>

        <h2 class="about-col">
          <%=mainSource.about.item2.title%>
        </h2>

        <ul>

          <li>
            <%=mainSource.about.item2.list.item1%>
          </li>
          <li>
            <%=mainSource.about.item2.list.item2%>
          </li>
          <li>
            <%=mainSource.about.item2.list.item3%>
          </li>
          <li>
            <%=mainSource.about.item2.list.item4%>
          </li>
          <li>
            <%=mainSource.about.item2.list.item5%>
          </li>

        </ul>

      </div>

      <div class="col-md-12 col-lg-4 text-center skill-col">

        <i class="fas fa-laptop-code about-icon"></i>

        <h2 class="about-col">
          <%=mainSource.about.item3.title%>
        </h2>

        <ul>

          <li>
            <%=mainSource.about.item3.list.item1%>
          </li>
          <li>
            <%=mainSource.about.item3.list.item2%>
          </li>
          <li>
            <%=mainSource.about.item3.list.item3%>
          </li>
          <li>
            <%=mainSource.about.item3.list.item4%>
          </li>
          <li>
            <%=mainSource.about.item3.list.item5%>
          </li>

        </ul>

      </div>

    </div>

  </div>

  <!-- Projects -->

  <div class="container-fluid projects-container" id="projects">

    <h1 class="intro">
      <%=mainSource.projects.title%>
    </h1>

    <div id="carouselExampleCaptions" class="carousel slide project-carousel-main" data-bs-ride="carousel">

      <ol class="carousel-indicators">
        <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"></li>
        <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"></li>
        <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"></li>
      </ol>

      <div class="carousel-inner">

        <div class="carousel-item active">
          <img src="images/website_splash.png" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5 class="carousel-title">
              <%=mainSource.projects.item1.title%>
            </h5>
            <p class="carousel-description">
              <%=mainSource.projects.item1.description%>
            </p>
            <!-- <button class="btn btn-sm btn-outline-light carousel-btn" type="button" name="button" onclick="window.location='#top';"><%=mainSource.projects.btn%></button> -->
          </div>
        </div>

        <div class="carousel-item">
          <img src="images/coming-soon.png" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5 class="carousel-title">
              <%=mainSource.projects.item2.title%>
            </h5>
            <p class="carousel-description">
              <%=mainSource.projects.item2.description%>
            </p>
            <!-- <button class="btn btn-sm btn-outline-light carousel-btn" type="button" name="button" onclick="window.location='#top';"><%=mainSource.projects.btn%></button> -->
          </div>
        </div>

        <div class="carousel-item">
          <img src="images/coming-soon.png" class="d-block w-100" alt="...">
          <div class="carousel-caption d-none d-md-block">
            <h5 class="carousel-title">
              <%=mainSource.projects.item3.title%>
            </h5>
            <p class="carousel-description">
              <%=mainSource.projects.item3.description%>
            </p>
            <!-- <button class="btn btn-sm btn-outline-light carousel-btn" type="button" name="button" onclick="window.location='#top';"><%=mainSource.projects.btn%></button> -->
          </div>
        </div>

      </div>

      <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </a>

      <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </a>

    </div>

  </div>

  <!-- Contact -->

  <div class="container-fluid contact-container" id="contact">

    <h1 class="intro">
      <%=mainSource.contact.title%>
    </h1>

    <form class="contact-form">

      <div class="mb-3">
        <label class="form-label">
          <%=mainSource.contact.name%>
        </label>
        <input type="text" class="form-control">

      </div>

      <div class="mb-3">
        <label class="form-label">
          <%=mainSource.contact.email%>
        </label>
        <input type="email" class="form-control">
      </div>

      <div class="mb-3">
        <label class="form-label">
          <%=mainSource.contact.message%>
        </label>
        <textarea class="form-control" name="name" rows="4" cols="60"></textarea>
      </div>

      <div class="submit-btn">
        <button type="submit" class="btn btn-outline-dark btn-sm contact-btn">
          <%=mainSource.contact.btn%>
        </button>
      </div>

    </form>

  </div>

  <%- include('partials/footer') -%>