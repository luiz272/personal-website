<%- include('partials/header') -%>

  <!-- Splash -->

  <div class="container-fluid splash text-center">

    <h1 class="intro"><%=introTitle%></h1>
    <h2 class="intro"><%=introSubtitle%></h2>
    <button class="btn btn-outline-light btn-sm intro show-button" type="button" name="button" onclick="window.location='#about';"><%=introButton%></button>

